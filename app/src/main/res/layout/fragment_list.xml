<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_list_fragment"
    android:background="@android:color/black">
    
    
    
    <ImageView
        android:id="@+id/songIV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/song_number_tv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toEndOf="@id/songIV"
        android:layout_margin="5dp"
        android:text="1"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/songTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:layout_constraintStart_toEndOf="@id/song_number_tv"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Do i wanna Know"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="duration :"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/song_number_tv"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/songtimeInput_TV"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="@id/songTitle_tv"
        android:text="4:23"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        />








    
    
    
    
    
    
    
    
    
    
    

</androidx.constraintlayout.widget.ConstraintLayout>